server {
	        listen  8000;
            host           localhost;
			root                	/website;
			
			server_name localhost:8001;
			index	                		index.html,      indexxxx.html;
		


 	location 	/ {
			
		root                	/website;
 		index			index.php index.nginx-debian.html;
 		autoindex		on;
 		methods			GET,POST,DELETE;
 		cgi_extension	.php;
 		cgi_bin			/usr/bin/php-cgi;
 	}

location 	/post
{
		index			index.html index.php index.nginx-debian.html;
		methods			POST;
 		autoindex		on;
		cgi_extension	.php;
		cgi_bin			/usr/bin/php-cgi;
}

location 	/sendDatas
{
		index			index.html index.php index.nginx-debian.html;
		methods			GET, POST;
 		autoindex		on;
		cgi_extension	.php;
		cgi_bin			/usr/bin/php-cgi;

}


